    <h2> Photo Gallery</h2>


@* Here I will show Uploaded Images *@
<table>
    @{
        int j = 0;
        for (int i = 0; i < Model.Count; i += 4)
        {
            j = i;
            <tr>
                @* I have done this for show 4 images in a Row *@
                @while (j < i + 4 && j < Model.Count())
                {
                    <td>
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].image,0,Model[j].image.Length)" hspace="20" vspace="20" width="300" />
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].image1,0,Model[j].image1.Length)" hspace="20" vspace="20" width="300">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].image2,0,Model[j].image2.Length)" hspace="20" vspace="20" width="300">
                    </td>
                    j++;
                }
            </tr>
        }
    }
</table>
